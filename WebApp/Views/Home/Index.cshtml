@model WebApp.Models.SaleBoardModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0" style="border: 1px solid black;">
            <tr>
                <th colspan="2" align="center">Sales Board Details</th>
            </tr>
            <tr></tr>
            <tr>
                <td>Board Size: </td>
                <td>
                    @Html.DropDownListFor(m => m.BoardSize, new List<SelectListItem>
                   { new SelectListItem{Text="Small", Value="Small"},
                     new SelectListItem{Text="Large", Value="Large"}}, "Please select")
                </td>
            </tr>
            <tr>
                <td>Location: </td>
                <td>
                    @Html.DropDownListFor(m => m.Location, new List<SelectListItem>
                    { new SelectListItem{Text="VIC", Value="VIC"},
                      new SelectListItem{Text="NSW", Value="NSW"},
                      new SelectListItem{Text="TAS", Value="TAS"},
                      new SelectListItem{Text="WA", Value="WA"},
                      new SelectListItem{Text="NT", Value="NT"}}, "Please select")
                </td>
            </tr>
            <tr>
                <td>Date From: </td>
                <td>
                    @Html.TextBoxFor(m => m.DateFrom, new { @class = "date-picker" })
                </td>
            </tr>
            <tr>
                <td>Date To: </td>
                <td>
                    @Html.TextBoxFor(m => m.DateTo, new { @class = "date-picker" })
                </td>
            </tr>
            <tr></tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }

    @if (Model != null)
    {
        <table>
            <tr><td>Cost: </td><td>$@Model.Price</td></tr>
            <tr><td>Discount Applied: </td><td>@Model.Discount %</td></tr>            
        </table>
    }
</body>
</html>

<script type="text/javascript">
    $(function () {
        $('.date-picker').datepicker({ dateFormat: 'dd-mm-yy' });
    })
</script>